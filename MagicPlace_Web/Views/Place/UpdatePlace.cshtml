@model MagicPlace_Web.Dto.PlaceUpdateDto
@{
    ViewData["Title"] = "UpdatePlace";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="UpdatePlace">
    <div class="container border p-3">

        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        <input hidden asp-for="Id"/>

        <div class="row">
            <h2 class="text-info">Update New Place</h2>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Place Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Cost</label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Detail</label>
                <textarea asp-for="Detail" class="form-control"></textarea>
                <span asp-validation-for="Detail" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Image</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Ocupants</label>
                <input asp-for="Ocupants" class="form-control" />
                <span asp-validation-for="Ocupants" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Square Meters</label>
                <input asp-for="SquareMeters" class="form-control" />
                <span asp-validation-for="SquareMeters" class="text-danger"></span>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Service</label>
                <textarea asp-for="Service" class="form-control"></textarea>
                <span asp-validation-for="Service" class="text-danger"></span>
            </div>
        </div>

        <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Place" asp-action="IndexPlace" class="btn btn-success">Back</a>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@{
    ViewData["Title"] = "UpdatePlace";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

