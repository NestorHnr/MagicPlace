@model MagicPlace_Web.Dto.PlaceDto
@{
    ViewData["Title"] = "DeletePlace";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="DeletePlace">
    <div class="container border p-3">

        <div asp-validation-summary="ModelOnly" class=" text-danger"></div>
        <input hidden asp-for="Id" />

        <div class="row">
            <h2 class="text-info">Delete Place</h2>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Place Name</label>
                <input asp-for="Name" disabled class="form-control" />
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Cost</label>
                <input asp-for="Cost" disabled class="form-control" />
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Detail</label>
                <textarea asp-for="Detail" disabled class="form-control"></textarea>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Image</label>
                <input asp-for="ImageUrl" disabled class="form-control" />
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Ocupants</label>
                <input asp-for="Ocupants" disabled class="form-control" />
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Square Meters</label>
                <input asp-for="SquareMeters" disabled class="form-control" />
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Service</label>
                <textarea asp-for="Service" disabled class="form-control"></textarea>
            </div>
        </div>

        <div class="d-grid gap-2 d-md-block mt-2">
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-controller="Place" asp-action="IndexPlace" class="btn btn-success">Back</a>
        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


