@model IEnumerable<MagicPlace_Web.Dto.CategoryPlaceDto>
@{
    ViewData["Title"] = "IndexCategoryPlace";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class=" container p-4 border">
    <div class=" row pb-2">
        <div class=" col">
            <h1 class=" text-primary">Category Place of List</h1>
        </div>
        <div class=" col text-end pt-1">
            <a asp-controller="CategoryPlace" asp-action="CreateCategoryPlace" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> Create New Category </a>
        </div>
    </div>
    <table class=" table">
        <thead>
            <tr>
                <th>Name Place</th>
                <th>Number place</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Place.Name</td>
                    <td>@item.NuCategory</td>
                    <td>@item.SpecialDetails</td>
                    <td>@((item.Cost).ToString("c"))</td>
                    <td>
                        <a asp-controller="CategoryPlace" asp-action="UpdateCategoryPlace" asp-route-NuCategory="@item.NuCategory" class="btn btn-success"><i class="bi bi-pencil-square"></i> </a>
                        <a asp-controller="CategoryPlace" asp-action="DeleteCategoryPlace" asp-route-NuCategory="@item.NuCategory" class="btn btn-danger"><i class="bi bi-trash-fill"></i> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
